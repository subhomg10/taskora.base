
{
  "entities": {
    "Job": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Job",
      "type": "object",
      "description": "Represents a job posting on the platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the job posting."
        },
        "title": {
          "type": "string",
          "description": "Title of the job."
        },
        "coverImage": {
          "type": "string",
          "description": "URL of the cover image for the job.",
          "format": "uri"
        },
        "shortDescription": {
          "type": "string",
          "description": "Brief summary of the job."
        },
        "fullDescription": {
          "type": "string",
          "description": "Detailed description of the job."
        },
        "requirements": {
          "type": "string",
          "description": "Job requirements and qualifications."
        },
        "payment": {
          "type": "number",
          "description": "Payment amount for the job."
        },
        "location": {
          "type": "string",
          "description": "Location of the job."
        },
        "deadline": {
          "type": "string",
          "description": "Application deadline for the job.",
          "format": "date-time"
        },
        "applicantIds": {
          "type": "array",
          "description": "References to Applicants.",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "description": "Tags associated with the job for searching.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "title",
        "shortDescription",
        "fullDescription",
        "requirements",
        "payment",
        "location",
        "deadline"
      ]
    },
    "Worker": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Worker",
      "type": "object",
      "description": "Represents a worker or job seeker on the platform.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "profileType": {
          "type": "string",
          "enum": ["Student", "Working Professional", "Freelancer"]
        },
        "location": {
          "type": "object",
          "properties": {
            "country": { "type": "string" },
            "state": { "type": "string" },
            "city": { "type": "string" },
            "pinCode": { "type": "string" }
          }
        },
        "currentStatus": {
          "type": "string",
          "enum": ["College", "Job", "Freelancer", "Unemployed"]
        },
        "statusDetails": {
          "type": "object",
          "properties": {
            "collegeName": { "type": "string" },
            "degree": { "type": "string" },
            "branch": { "type": "string" },
            "semester": { "type": "string" },
            "companyName": { "type": "string" },
            "role": { "type": "string" },
            "years": { "type": "string" }
          }
        },
        "primaryRole": {
          "type": "string"
        },
        "skills": {
          "type": "array",
          "items": { "type": "string" }
        },
        "experienceLevel": {
          "type": "string",
          "enum": ["Beginner", "Intermediate", "Advanced"]
        },
        "yearsOfExperience": {
          "type": "number"
        },
        "portfolio": {
          "type": "object",
          "properties": {
            "resumeUrl": { "type": "string" },
            "github": { "type": "string" },
            "linkedin": { "type": "string" },
            "portfolioUrl": { "type": "string" }
          }
        },
        "availability": {
          "type": "string",
          "enum": ["Full-time", "Part-time", "Freelance", "Internship"]
        },
        "profileCompleted": {
          "type": "boolean"
        },
        "verified": {
          "type": "boolean"
        },
        "walletBalance": {
          "type": "number"
        }
      },
      "required": ["id", "name", "email"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/jobs/{jobId}",
        "definition": {
          "entityName": "Job",
          "schema": { "$ref": "#/backend/entities/Job" },
          "description": "Stores job postings."
        }
      },
      {
        "path": "/workers/{workerId}",
        "definition": {
          "entityName": "Worker",
          "schema": { "$ref": "#/backend/entities/Worker" },
          "description": "Stores worker profiles and setup status."
        }
      },
      {
        "path": "/roles_admin/{uid}",
        "definition": {
          "entityName": "Admin",
          "schema": { "type": "object" },
          "description": "Indicates admin role."
        }
      }
    ]
  }
}
